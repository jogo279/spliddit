<% provide(:title, 'New Distribute Tasks Instance') %>
<% provide(:description, "Enter a list of participants and a list of tasks (household chores, work shifts, or anything else) to get started. We'll then send everyone a link where they specify how much they prefer each task relative to the others.") %>
<%= include_javascript 'forms/base.js' %>
<%= include_javascript 'forms/tasks.js' %>

<%= render 'banner' %>

<div class="page-content">
  <div class="wrap">
    <%= form_tag assigning_tasks_instances_path + '/create', honeypot: true, autocomplete: "off" do %>
      <div class="form-row">
        <h2 style="margin-bottom:0">Tasks Description</h2>
        <p class="description">A short description of the tasks, chores, or shifts being assigned. Include the period of time over which the tasks are to be completed.
        </p>
        <%= text_field_tag :instance_name, nil, maxlength: 100, class: "ipt-med" %>
      </div>
      <%= render 'instances/participants_form', locals: { title: "Participants" } %>
      <br />
      <%= render 'instances/resources_form' %>
      <br />
      <%= render 'instances/admin_email_form' %>
      <%= render 'instances/submit' %>
    <% end %>
  </div>
</div>