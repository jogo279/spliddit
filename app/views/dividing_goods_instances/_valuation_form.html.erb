<%= include_javascript "valuations/base.js.erb" %>
<%= include_javascript "valuations/goods.js.erb" %>

<%= render 'layouts/text_banner', locals: { title: "Divide Goods - #{@instance.name}" } %>

<div class="page-content">
  <div class="wrap">
    <%= form_tag "#{@instance.id}/valuations/" + params[:p], honeypot: true do %>
      <%= render 'instances/valuation_form_header' %>
      <h2 style="margin-bottom:0">Item Evaluations</h2>
      <p>
        Please use the sliders to assign values to each of the items below. All of your values must sum to 1000 to submit this form. You can use the <em>rescale</em> button to automatically adjust your values to add up to 1000. <a href = "<%= root_url + 'apps/goods' %>" target="_blank">Click here</a> to learn how we use your evaluations to arrive at a fair division.</a>
      </p>

      <%= render 'instances/sliders' %>
    <% end %>
  </div>
</div>
