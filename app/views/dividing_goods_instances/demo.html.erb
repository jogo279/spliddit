<% provide(:title, 'Live Demo: Divide Goods') %>
<% provide(:description, "Fairly divide jewelery, artworks, furniture, financial assets, or anything else. With the live demo, you can experiment with the application and view the results on a single screen in a matter of seconds.") %>
<%= include_javascript 'demos/goods.js' %>

<%= render 'banner' %>

<div class="page-content">
    <div class="wrap">
        <h1>Live Demo</h1><br>
        <div class="accordion curved" id="basics">The Basics<span class="symbol"></span></div>
        <div class="accordion-container">
            <div class="accordion-content">
                <form>
                    <div class="form-row">
                        <div class="form-row">
                            <p id="basics-error" class="error-msg error-text"></p>
                        </div>
                        <div class="form-row">
                            <% if params[:people].to_i == 2 %>
                                <h2 style="margin-bottom:0">Participant 1</h2>                            
                                <%= text_field_tag :participant1, "Alice", maxlength: 30, class: "ipt-small" %>
                                <br><br>
                                <h2 style="margin-bottom:0">Participant 2</h2>                            
                                <%= text_field_tag :participant2, "Bob", maxlength: 30, class: "ipt-small" %>
                            <% else %>
                                <h2 style="margin-bottom:0">Participants (comma-separated)</h2>
                                <%= text_field_tag :participants, "Alice, Bob, Claire", maxlength: 150, style: "width:90%" %>
                            <% end %>
                        </div>
                        <div class="form-row">
                            <h2 style="margin-bottom:0">Items (comma-separated)</h2>
                            <%= text_field_tag :items, "Gold Ring, Diamond Ring, Pearl Necklace, Ruby Earrings, Gold Watch, Silver Bracelet", maxlength: 150, style: "width:90%" %>
                        </div>
                        <%= submit_tag "   Update   ", class: "btn", onclick: "validateUpdateForm(); return false" %>
                    </div>
                </form>
            </div>
        </div>
        <div class="accordion" id="results">Results<span class="symbol"></span></div>
        <div class="accordion-container">
            <div class="accordion-content">
                <div id="update-results">
                    <p id="update-results-msg">Click the button to divide the items!</p>
                    <button id="submit-demo" type="button" class="btn update" onclick="checkBids(); return false">Get Results</button>
                </div>
                <br><br>
                <div id="results-table"></div>
            </div>
        </div>
    </div>
</div>